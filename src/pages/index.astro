---
import Layout from '../layouts/Layout.astro';

const labItems = [
    { href: '/waves', name: 'FLUID WAVES' },
    { href: '/dark', name: 'ETERNAL SILENCE' },
    { href: '/pixels', name: 'PIXEL STORM' },
    { href: '/garden', name: 'GLOW GARDEN' },
    { href: '/space', name: 'CUB(E)(V)OID' },
    { href: '/neon', name: 'THE ORBS' },
    { href: '/liquid', name: 'LIGHT FLOAT' },
    { href: '/hunter', name: 'PARTICLE HUNTER' },
    { href: '/physics', name: 'TAP2SHAPE' },
    { href: '/diorama', name: 'TOUCHING GRASS' },
    { href: '/type', name: 'UNITE BREAK' },
    { href: '/chaos', name: 'CREATIVE CHAOS' }


];
---

<Layout title="VIA LABS">
    <div class="mobile-warning">
        Best experienced on desktop
    </div>
    <div class="labs">
        <div class="title-section">
            <h1>VIA<br/>LABS</h1>
            <p class="subtitle">Exploratory scenescapes</p>
        </div>
        <nav class="lab-links">
            {labItems.map((item, index) => (
                <a href={item.href} class="link" data-preview={item.href}>
                    <span class="number">{(index + 1).toString().padStart(2, '0')}</span>
                    <span class="name">{item.name}</span>
                </a>
            ))}
        </nav>
        <div id="preview-popup">
            <iframe></iframe>
        </div>
    </div>
</Layout>

<script>
    import { computePosition, flip, shift, offset } from '@floating-ui/dom';

    const popup = document.querySelector('#preview-popup') as HTMLElement;
    const iframe = popup.querySelector('iframe') as HTMLIFrameElement;
    let currentLink: HTMLElement | null = null;

    document.querySelectorAll('.link').forEach(link => {
        const showPreview = (e: Event) => {
            currentLink = e.currentTarget as HTMLElement;
            const previewUrl = currentLink.getAttribute('data-preview');
            
            if (previewUrl) {
                iframe.src = previewUrl;
                popup.style.display = 'block';
                
                if (currentLink) {
                    computePosition(currentLink, popup, {
                        placement: 'right',
                        middleware: [
                            offset(10),
                            flip(),
                            shift()
                        ],
                    }).then(({x, y}) => {
                        popup.style.left = `${x}px`;
                        popup.style.top = `${y}px`;
                    });
                }
            }
        };

        link.addEventListener('mouseenter', showPreview);
        link.addEventListener('mouseleave', () => {
            popup.style.display = 'none';
            iframe.src = 'about:blank';
        });
    });
</script>

<style>
    .labs {
       height: 100vh;
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: 15rem 0;
        background: #181818;
        gap: 2rem;
    }

    .title-section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 4rem;
    }

    h1 {
        font-size: clamp(5rem, 15vw, 12rem);
        font-weight: 900;
        color: #fff;
        margin: 0;
        letter-spacing: -0.02em;
        line-height: 0.9;
    }

    .subtitle {
        color: #f8f3ff;
        font-size: 1.2rem;
        margin: 1rem 0 0;
        letter-spacing: 0.1em;
        text-transform: uppercase;
    }

    .lab-links {
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
        height: 60vh;
        padding: 20rem 0 5rem 0;
        overflow:scroll;
    }

    .link {
        display: flex;
        align-items: center;
        gap: 2rem;
        text-decoration: none;
        color: #fff;
        opacity: 0.7;
        transition: opacity 0.3s, transform 0.3s;
    }

    .link:hover {
        opacity: 1;
        transform: translateX(20px);
    }

    .number {
        font-size: 1rem;
        opacity: 0.5;
    }

    .name {
        font-size: 2rem;
        letter-spacing: 0.1em;
    }

    #preview-popup {
        display: none;
        position: fixed;
        width: 400px;
        height: 300px;
        background: #000;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        overflow: hidden;
        z-index: 1000;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
    }

    #preview-popup iframe {
        width: 200%;
        height: 200%;
        border: none;
        transform: scale(0.7);
        transform-origin: 0 0;
        pointer-events: none;
    }

    .mobile-warning {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 0.5rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        color: #fff;
        text-align: center;
        font-size: 0.8rem;
        letter-spacing: 0.1em;
        z-index: 1000;
    }

    @media (max-width: 768px) {
        .labs {
            grid-template-columns: 1fr;
            padding: 1rem;
        }

        .title-section {
            padding-left: 1rem;
        }

        h1 {
            font-size: clamp(3rem, 10vw, 6rem);
        }

        .mobile-warning {
            display: block;
        }
    }
</style>
