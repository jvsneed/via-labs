<div class="canvas">
    <nav class="nav-links">
        <a href="/">RETURN TO LAB</a>
    </nav>
    <div class="neon-container">
        <div class="neon-circle"></div>
        <div class="neon-circle delayed"></div>
        <div class="neon-circle delayed-more"></div>
    </div>
</div>

<script>
    const container = document.querySelector('.neon-container');
    
    document.addEventListener('mousemove', (e) => {
        const { clientX, clientY } = e;
        const circles = document.querySelectorAll('.neon-circle');
        
        circles.forEach((circle, index) => {
            const el = circle as HTMLElement;
            const delay = index * 0.2;
            el.style.transform = `translate(
                ${clientX - el.offsetWidth/2}px, 
                ${clientY - el.offsetHeight/2}px
            )`;
        });
    });
</script>

<style>
    .canvas {
        width: 100%;
        height: 100vh;
        background: #000;
        overflow: hidden;
        position: relative;
        color: #fff;
    }

    .nav-links {
        position: fixed;
        top: 2rem;
        left: 2rem;
        z-index: 100;
    }

    .nav-links a {
        color: #fff;
        text-decoration: none;
        font-size: 0.8rem;
        letter-spacing: 0.2em;
        opacity: 0.7;
        transition: opacity 0.3s;
    }

    .nav-links a:hover {
        opacity: 1;
    }

    .neon-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .neon-circle {
        position: absolute;
        width: 300px;
        height: 300px;
        border-radius: 50%;
        background: radial-gradient(circle at center,
            rgba(255, 0, 255, 0.5),
            rgba(255, 0, 255, 0.2) 50%,
            transparent 70%
        );
        mix-blend-mode: screen;
        filter: blur(20px);
        transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .delayed {
        background: radial-gradient(circle at center,
            rgba(0, 255, 255, 0.5),
            rgba(0, 255, 255, 0.2) 50%,
            transparent 70%
        );
        transition-delay: 0.1s;
    }

    .delayed-more {
        background: radial-gradient(circle at center,
            rgba(255, 255, 0, 0.5),
            rgba(255, 255, 0, 0.2) 50%,
            transparent 70%
        );
        transition-delay: 0.2s;
    }
</style>
